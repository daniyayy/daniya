#include <iostream>
#include <string>

int main()

{
    int age=10;
    
    std::cout << " -Hello! We need you to register on the site. " << std::endl;
    std::cout << " -Can you please write your age? " << std::endl;
    
    if (age >= 10)
    
    std::cout << " Welcome to the game! I'm your personal chat-bot and i'll give you advices. " << std::endl;
    
    else
    std::setlocale;
    
    std::cout << " I'm so sorry, but you're too young for this game. I hope that you'll come back when you'll be older! " << std::endl;
    
    if (age > 100)
    std::setlocale;
    
    std::cout << " Sorry, but ancient people are forbidden to play such games:) " << std::endl;
    
    if ( age < 3)
    std::setlocale;
    
    std::cout << " Hi child. I don't think that you can read it, so go play with toys. " << std::endl;
    
    
    return 0;
}
    
